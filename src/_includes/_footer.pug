                          li
                            a(href=path + 'member/01.html') #{member_oga}
                          li
                            a(href=path + 'member/02.html') #{member_naka}
                          li
                            a(href=path + 'member/03.html') #{member_fuku}
                          li
                            a(href=path + 'member/04.html') #{member_yama}
                          li
                            a(href=path + 'member/05.html') #{member_ito}
                          li
                            a(href=path + 'member/06.html') #{member_kura}
                      .st-Footer_Link_Body_Sub_Right
                        ul
                          li
                            a(href=path + 'company/business.html') #{company}
                          li
                            a(href=path + 'recruitment/index.html') #{info}
                          li
                            a(href=path + 'personality/index.html') #{personality}
                          li
                            a(href=path + 'welfare/index.html') #{ｗelfare}
                          li
